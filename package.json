{
  "name": "universal-text-processor",
  "version": "2.2.0",
  "description": "Universal Text Processor - Chrome Extension + Cloudflare Workers Backend",
  "scripts": {
    "test": "npm run test:extension && npm run test:backend",
    "test:extension": "npm run test:templates && npm run test:integration && npm run test:twitter",
    "test:templates": "node extension/tests/template-tests.js",
    "test:integration": "node extension/tests/integration-tests.js",
    "test:twitter": "node extension/tests/twitter-integration-test.js",
    "test:backend": "node backend/tests/api-tests.js",
    "test:watch": "nodemon --watch extension --watch backend --exec npm test",
    "deploy:backend": "cd backend && npm run deploy",
    "dev:backend": "cd backend && npm run dev",
    "lint": "echo 'Lint not configured yet'",
    "validate": "npm run test && echo 'âœ… All tests passed! Ready to deploy.'",
    "prepare": "husky install",
    "precommit": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mkurecka/x-post-sender.git"
  },
  "keywords": [
    "chrome-extension",
    "text-processor",
    "cloudflare-workers",
    "ai",
    "visual-content"
  ],
  "author": "Michal Kurecka",
  "license": "MIT",
  "devDependencies": {
    "husky": "^8.0.3",
    "nodemon": "^3.0.2"
  }
}
